#python while loops part1
bill = [50000, 75000, 125000, 300000, 200000]
#without using while loop
#total_bill = bill[0] + bill[1] + bill[2] + bill[3] + bill[4]
#print(total_bill)
#using while loop
i = 0  #sebuah variable untuk mengakses setiap elemen tagihan satu per satu
amount_bill = len(bill) #panjang jumlah element dalam list tagihan
total_bill = 0 #mula-mula set total tagihan ke 0
while i < amount_bill: #selama nilai i kurang dari jumlah tagihan
    total_bill += bill[i] #tambahkan tagihan(i) ke total tagihan
    i += 1 #tambahkan nilai i dengan 1 untuk memproses tagihan selanjutnya
    print(total_bill)
    
    
